<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Detail Pengajuan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#E4ECEF] font-sans text-gray-800">

  <div class="flex min-h-screen">
    <!-- Sidebar Mahasiswa -->
    <aside class="w-72 bg-[#7c9dab] text-white flex flex-col p-4 fixed h-full shadow-lg">
      <!-- Profil -->
      <div class="text-center py-4 border-b border-white/20">
        <img src="https://placehold.co/100x100/E7EEF0/5c7a89?text=Admin" alt="Foto Profil Admin" class="rounded-lg w-24 h-24 mx-auto mb-3 border-4 border-white/30">
        <h3 class="font-bold text-lg">Dinda Arfitri</h3>
        <p class="text-sm">Mahasiswa SI</p>
      </div>

      <!-- Navigasi -->
      <nav class="mt-6 flex-grow overflow-y-auto pr-2">
        <ul class="space-y-1 pb-4 text-md font-medium">
          <li><a href="/mahasiswa/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard</a></li>
          <li><a href="/mahasiswa/lowongan" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="briefcase" class="w-5 h-5"></i> Daftar Lowongan</a></li>
          <li>
          <a href="/formulir"
            class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200 pointer-events-none text-gray-400">
            <i data-lucide="file-text" class="w-5 h-5"></i> Formulir Pengajuan Magang
          </a>
        </li>
          <li><a href="/mahasiswa/status-pengajuan" class="flex items-center gap-3 px-4 py-3 rounded-md bg-white text-[#7c9dab] font-semibold shadow-inner"><i data-lucide="check-circle" class="w-5 h-5"></i> Status & Verifikasi Dokumen</a></li>
          <li><a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="book-open" class="w-5 h-5"></i> Logbook</a></li>
          <li><a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="file-check" class="w-5 h-5"></i> Laporan Akhir</a></li>
          <li><a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="star" class="w-5 h-5"></i> Penilaian</a></li>
          <li><a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a]"><i data-lucide="megaphone" class="w-5 h-5"></i> Pengumuman</a></li>
        </ul>
      </nav>

      <!-- Logout -->
     <div class="mt-auto pt-4 border-t border-white/20">
                <a href="/logout" class="flex items-center gap-3 w-fit mx-auto px-6 py-2.5 rounded-md bg-red-600/80 hover:bg-red-700/80 transition-colors duration-200">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    Logout
                </a>
            </div>
        </aside>

    <!-- Konten Utama -->
    <main class="ml-72 flex-1 p-10 overflow-y-auto">
      <!-- Header: Judul Tengah + Profil di Kanan -->
<div class="relative mb-8">
  <!-- Judul Tengah -->
  <h1 class="text-2xl font-bold text-center text-gray-800">Detail Pengajuan Magang</h1>

  <!-- Profil Mahasiswa di Kanan Atas -->
  <div class="absolute top-0 right-0 flex items-center gap-4">
    <div class="text-right">
      <p class="font-semibold text-gray-800">Dinda Arfitri</p>
      <p class="text-sm text-gray-500">Mahasiswa Aktif</p>
    </div>
    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
      </svg>
    </div>
  </div>
</div>

      <!-- Konten Tengah Detail -->
      <div class="flex justify-center">
        <div class="bg-white shadow rounded-xl p-6 w-full max-w-2xl space-y-5">
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Nama Mahasiswa:</span>
            <span><%= detail.nama %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">NIM:</span>
            <span><%= detail.nim %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Nama Perusahaan:</span>
            <span><%= detail.perusahaan %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Deskripsi Posisi:</span>
            <span><%= detail.deskripsi %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Tanggal Pengajuan:</span>
            <span><%= detail.tanggal %></span>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Status Pengajuan:</span>
            <span class="<%= detail.status === 'Diterima' ? 'text-green-600' : detail.status === 'Ditolak' ? 'text-red-600' : 'text-yellow-600' %> font-semibold">
              <%= detail.status %>
            </span>
          </div>
          <!-- Tombol Lihat File -->
          <div class="space-y-3">
            <% if (detail.cv) { %>
              <div class="flex justify-between">
                <span class="font-semibold text-gray-700">CV:</span>
                <a href="/pengajuan/<%= detail.cv %>" target="_blank" class="text-blue-600 hover:underline">Lihat file</a>
              </div>
            <% } %>

            <% if (detail.transkrip) { %>
              <div class="flex justify-between">
                <span class="font-semibold text-gray-700">Transkrip:</span>
                <a href="/pengajuan/<%= detail.transkrip %>" target="_blank" class="text-blue-600 hover:underline">Lihat file</a>
              </div>
            <% } %>

            <% if (detail.krs) { %>
              <div class="flex justify-between">
                <span class="font-semibold text-gray-700">KRS:</span>
                <a href="/pengajuan/<%= detail.krs %>" target="_blank" class="text-blue-600 hover:underline">Lihat file</a>
              </div>
            <% } %>

            <% if (detail.dokumen_pendukung) { %>
              <div class="flex justify-between">
                <span class="font-semibold text-gray-700">Dokumen Pendukung:</span>
                <a href="/pengajuan/<%= detail.dokumen_pendukung %>" target="_blank" class="text-blue-600 hover:underline">Lihat file</a>
              </div>
            <% } %>
          </div>
          <div class="flex justify-between">
            <span class="font-semibold text-gray-700">Verifikasi:</span>
            <span><%= detail.verifikasi %></span>
          </div>
          <div>
            <p class="font-semibold mb-1 text-gray-700">Catatan Verifikasi:</p>
            <p class="border p-3 rounded bg-gray-50 text-sm"><%= detail.keterangan || 'Tidak ada catatan.' %></p>
          </div>

          <div class="text-center pt-6">
            <a href="/mahasiswa/status-pengajuan" class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition duration-200">
              Kembali ke Status Pengajuan
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>

</body>
</html>
