<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <title>Detail Lowongan</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex bg-[#e6eef1] min-h-screen font-sans text-gray-800">

  <!-- =============== Sidebar Mahasiswa =============== -->
<aside class="w-72 bg-[#7c9dab] text-white flex flex-col p-4 fixed h-full shadow-lg">
  <!-- Profile Photo & Info Mahasiswa -->
  <div class="text-center py-4 border-b border-white/20">
      <img src="https://placehold.co/100x100/E7EEF0/5c7a89?text=Admin" alt="Foto Profil Admin" class="rounded-lg w-24 h-24 mx-auto mb-3 border-4 border-white/30">
    <h3 class="font-bold text-lg">Dinda Arfitri</h3>
    <p class="text-sm">Mahasiswa SI</p>
  </div>

  <!-- Navigasi -->
  <nav class="mt-6 flex-grow overflow-y-auto pr-1">
    <ul class="space-y-1 text-sm font-medium pb-4">
      <li><a href="/mahasiswa/dashboard" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard</a></li>
      <li><a href="/mahasiswa/lowongan" class="flex items-center gap-2 px-3 py-2 rounded-md bg-white text-[#7c9dab] font-semibold shadow-inner transition-colors duration-200"><i data-lucide="briefcase" class="w-5 h-5"></i> Daftar Lowongan</a></li>
      <li>
      <a href="/formulir"
        class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200 pointer-events-none text-gray-400">
        <i data-lucide="file-text" class="w-5 h-5"></i> Formulir Pengajuan Magang
      </a>
    </li>
      <li><a href="/mahasiswa/status-pengajuan" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="check-circle" class="w-5 h-5"></i> Status Pengajuan & Verifikasi Dokumen</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="book-open" class="w-5 h-5"></i> Logbook</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="file-check" class="w-5 h-5"></i> Laporan Akhir</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="star" class="w-5 h-5"></i> Penilaian</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="megaphone" class="w-5 h-5"></i> Pengumuman</a></li>
    </ul>
  </nav>

 <!-- Logout -->
  <div class="mt-auto pt-4 border-t border-white/20">
                <a href="/logout" class="flex items-center gap-3 w-fit mx-auto px-6 py-2.5 rounded-md bg-red-600/80 hover:bg-red-700/80 transition-colors duration-200">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    Logout
                </a>
            </div>
        </aside>

  <!-- Konten Detail -->
<main class="ml-72 flex-1 p-10">
  <!-- Header: Judul Tengah + Profil di Kanan -->
  <div class="relative mb-8">
    <!-- Judul Tengah -->
    <h1 class="text-2xl font-bold text-center text-gray-800">Detail Lowongan Magang</h1>

    <!-- Profil Mahasiswa di Kanan Atas -->
    <div class="absolute top-0 right-0 flex items-center gap-4">
      <div class="text-right">
        <p class="font-semibold text-gray-800">Dinda Arfitri</p>
        <p class="text-sm text-gray-500">Mahasiswa Aktif</p>
      </div>
      <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
      </div>
    </div>
  </div>

  <!-- Konten Detail Lowongan -->
  <div class="max-w-4xl mx-auto bg-white p-8 rounded-xl shadow-md">
    <h1 class="text-3xl font-bold text-gray-800"><%= lowongan.judul %></h1>
    <p class="text-xl font-semibold text-gray-700 mt-1">
      <%= lowongan.perusahaanData ? lowongan.perusahaanData.nama : (lowongan.perusahaan || '-') %>
    </p>
    
    <div class="mt-6 border-t pt-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-4">
        <div>
          <h3 class="font-semibold text-gray-600">Lokasi</h3>
          <p><%= lowongan.lokasi %></p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-600">Durasi</h3>
          <p><%= lowongan.durasi %></p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-600">Periode Pendaftaran</h3>
          <p><%= new Date(lowongan.tanggal_dibuka).toLocaleDateString('id-ID') %> - <%= new Date(lowongan.tanggal_ditutup).toLocaleDateString('id-ID') %></p>
        </div>
        <% if(lowongan.link_berkas) { %>
        <div>
          <h3 class="font-semibold text-gray-600">Berkas Persyaratan</h3>
          <a href="<%= lowongan.link_berkas %>" target="_blank" class="text-blue-600 hover:underline">Lihat Berkas</a>
        </div>
        <% } %>
      </div>
    </div>

    <div class="mt-6 border-t pt-6">
      <h2 class="text-xl font-bold mb-2">Deskripsi Pekerjaan</h2>
      <div class="prose max-w-none text-gray-700"><%- lowongan.deskripsi %></div>
    </div>
    
    <div class="mt-6 border-t pt-6">
      <h2 class="text-xl font-bold mb-2">Kualifikasi</h2>
      <div class="prose max-w-none text-gray-700"><%- lowongan.kualifikasi %></div>
    </div>

    <% if (lowongan && lowongan.id) { %>
      <div class="mt-8 text-center">
        <a href="/mahasiswa/formulir/<%= lowongan.id %>" class="bg-[#7c9dab] text-white px-8 py-3 rounded-lg hover:bg-[#658894] transition-colors duration-200 text-lg font-semibold">Ajukan Magang</a>
      </div>
    <% } %>
  </div>
</main>
</body>
</html>
