<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Lowongan Magang</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex bg-[#e6eef1] min-h-screen font-sans">

 <!-- =============== Sidebar Mahasiswa (Ukuran Lebih Kecil) =============== -->
<aside class="w-56 bg-[#7c9dab] text-white flex flex-col p-4 fixed h-full shadow-lg z-10">
  <!-- Profile Mahasiswa -->
  <div class="text-center py-4 border-b border-white/20">
    <img src="https://placehold.co/100x100/E7EEF0/5c7a89?text=Admin" alt="Foto Profil Admin" class="rounded-lg w-20 h-20 mx-auto mb-3 border-4 border-white/30">
    <h3 class="font-bold text-base">Dinda Arfitri</h3>
    <p class="text-sm">Mahasiswa SI</p>
  </div>

  <!-- Navigasi -->
  <nav class="mt-6 flex-grow overflow-y-auto pr-1">
    <ul class="space-y-1 text-sm font-medium pb-4">
      <li><a href="/mahasiswa/dashboard" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard</a></li>
      <li><a href="/mahasiswa/lowongan" class="flex items-center gap-2 px-3 py-2 rounded-md bg-white text-[#7c9dab] font-semibold shadow-inner transition-colors duration-200"><i data-lucide="briefcase" class="w-5 h-5"></i> Daftar Lowongan</a></li>
      <li>
      <a href="/formulir"
        class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200 pointer-events-none text-gray-400">
        <i data-lucide="file-text" class="w-5 h-5"></i> Formulir Pengajuan Magang
      </a>
     </li>
      <li><a href="/mahasiswa/status-pengajuan" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="check-circle" class="w-5 h-5"></i>  Status & Verifikasi Dokumen</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="book-open" class="w-5 h-5"></i> Logbook</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="file-check" class="w-5 h-5"></i> Laporan Akhir</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="star" class="w-5 h-5"></i> Penilaian</a></li>
      <li><a href="#" class="flex items-center gap-2 px-3 py-2 rounded-md hover:bg-[#6b8c9a] transition-colors duration-200"><i data-lucide="megaphone" class="w-5 h-5"></i> Pengumuman</a></li>
    </ul>
  </nav>

  <!-- Logout -->
  <div class="mt-auto pt-4 border-t border-white/20">
                <a href="/logout" class="flex items-center gap-3 w-fit mx-auto px-6 py-2.5 rounded-md bg-red-600/80 hover:bg-red-700/80 transition-colors duration-200">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    Logout
                </a>
            </div>
        </aside>

  <!-- Main Content -->
<main class="ml-56 flex-1 p-10 overflow-y-auto">
  <!-- Header: Judul + Pencarian + Profil -->
  <div class="flex justify-between items-center mb-8">
    
    <!-- Kiri: Judul dan Pencarian -->
    <div>
      <h1 class="text-3xl font-bold text-gray-800 mb-2">Lowongan Magang</h1>
      <div class="flex items-center gap-2">
        <input type="text" placeholder="Cari lowongan....." class="px-4 py-2 rounded-full w-72 border border-gray-300 focus:outline-none" />
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 -ml-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-4.35-4.35M11 18a7 7 0 100-14 7 7 0 000 14z" />
        </svg>
      </div>
    </div>

    <!-- Kanan: Profil Mahasiswa -->
    <div class="flex items-center gap-4">
      <div class="text-right">
        <p class="font-semibold text-gray-800">Dinda Arfitri</p>
        <p class="text-sm text-gray-500">Mahasiswa Aktif</p>
      </div>
      <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
        </svg>
      </div>
    </div>
  </div>

    <!-- Lowongan Cards -->
    <div class="space-y-6">
      <% if (!lowonganList || lowonganList.length === 0) { %>
        <div class="bg-white p-6 rounded-xl text-center">
          <p class="text-gray-500">Belum ada lowongan yang tersedia.</p>
        </div>
      <% } else { %>
        <% lowonganList.forEach(lowongan => { %>
          <div class="bg-white p-6 rounded-xl flex justify-between items-center mb-4 shadow-sm border border-gray-200">
            <div>
              <h2 class="text-xl font-semibold text-gray-800"><%= lowongan.judul %></h2>
              <p class="text-md text-gray-700 font-medium">
                <%= lowongan.perusahaanData ? lowongan.perusahaanData.nama : (lowongan.perusahaan || '-') %>
              </p>
              <p class="text-sm text-gray-500 mt-1"><strong>Lokasi:</strong> <%= lowongan.lokasi %></p>
              <p class="text-sm text-gray-500 mt-1"><strong>Durasi:</strong> <%= lowongan.durasi %></p>
              <p class="text-sm text-gray-500 mt-1">
                <strong>Tanggal Dibuka:</strong> <%= lowongan.tanggal_dibuka ? new Date(lowongan.tanggal_dibuka).toLocaleDateString('id-ID') : 'N/A' %>
              </p>
              <p class="text-sm text-red-600 mt-2">
                <strong>Ditutup:</strong> <%= lowongan.tanggal_ditutup ? new Date(lowongan.tanggal_ditutup).toLocaleDateString('id-ID') : 'N/A' %>
              </p>
              <% if (lowongan.link_berkas) { %>
                <a href="<%= lowongan.link_berkas %>" target="_blank" class="text-sm text-blue-600 hover:underline mt-2 inline-block">
                  ðŸ“Ž Lihat Berkas Persyaratan
                </a>
              <% } %>
              <% if (lowongan.deskripsi) { %>
                <p class="text-sm text-gray-700 mt-2"><strong>Deskripsi:</strong> <%= lowongan.deskripsi %></p>
              <% } %>
              <% if (lowongan.kualifikasi) { %>
                <p class="text-sm text-gray-700 mt-2"><strong>Kualifikasi:</strong> <%= lowongan.kualifikasi %></p>
              <% } %>
            </div>
            <a href="/mahasiswa/lowongan/<%= lowongan.id %>" class="bg-[#7c9dab] text-white px-4 py-2 rounded hover:bg-[#658894] transition-colors duration-200">Lihat Detail</a>
          </div>
        <% }) %>
      <% } %>
    </div>
  </main>

  <!-- Optional profil pojok kanan atas (bisa kamu masukkan ke navbar kalau mau) -->

</body>
</html>
